<div class="sidebar bg-light">
    <div class="pt-2 h-100">
        <img class="img-fluid rounded-circle" src="images/profilePicture.jpg" />

        <div class="menu list-group list-group-flush pt-5">
            <NavLink class="list-group-item list-group-item-action bg-light" href="/">
                Home
            </NavLink>
            <AuthorizeView Roles="User">
                <Authorized>
                    <NavLink class="list-group-item list-group-item-action bg-light" href="/Support">
                        Kontakt z pomocą techniczną
                    </NavLink>
                    <AuthorizeView Roles="Administrator" Context="AdminContext">
                        <p class="m-3"><b>Admin</b></p>

                        <NavLink class="list-group-item list-group-item-action bg-light" href="Admin/ManagePizzas">
                            Pizze
                        </NavLink>

                        <NavLink class="list-group-item list-group-item-action bg-light" href="Admin/PizzaCreator">
                            Twórca pizzy
                        </NavLink>

                        <NavLink class="list-group-item list-group-item-action bg-light" href="Admin/SalesBot">
                            Bot sprzedaży
                        </NavLink>

                        <NavLink class="list-group-item list-group-item-action bg-light" href="Admin/Tickets">
                            Tickety
                        </NavLink>

                    </AuthorizeView>

                    <p class="m-3"><b>Konto</b></p>
                    <NavLink class="list-group-item list-group-item-action bg-light" href="Account/Manage">
                        Zarządzaj kontem
                    </NavLink>

                    <form class="list-group-item list-group-item-action bg-light" action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="btn btn-outline-primary btn-sm mt-3" style="width: 100%;">
                            Wyloguj
                        </button>
                    </form>

                </Authorized>

                <NotAuthorized>
                    <NavLink class="btn btn-outline-primary btn-sm mt-3" href="Account/Register">
                        Rejestracja
                    </NavLink>

                    <NavLink href="Account/Login" class="btn btn-outline-primary btn-sm mt-3">
                        Logowanie
                    </NavLink>

                </NotAuthorized>
            </AuthorizeView>

        </div>
    </div>
</div>

@page "/admin/pizzacreator"
@using Microsoft.AspNetCore.Authorization
@using DevHobby.GPTizza.Model

@attribute [Authorize(Roles = "Administrator")]
@rendermode InteractiveServer

<h3>Twórca pizzy</h3>
<p>Twórca pizzyto narzędzie awaryjne, które pomoże Ci przygotować pizzę w przypadku niedoboru produktów.</p>

<br />
<h4>Wpisz poniżej składniki, które nam jeszcze zostały:</h4>
<div class="form-group">
    <textarea id="ingredientTextArea" 
        @bind="Ingredients" 
        class="form-control m-2"
        placeholder="Wpisz tutaj dostępne składniki...">
    </textarea>
</div>
<div>
    <button class="btn btn-primary" @onclick="OnEnterIngredients">
        Zapytaj Twórce pizzy
    </button>
</div>
<div class="mt-3">
    <p>@Message</p>
</div>